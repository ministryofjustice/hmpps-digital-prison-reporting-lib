      "name": "hospital-dataset",
      "datasource": "datamart",
      "query": "SELECT prisoners.number AS prisonNumber,CONCAT(CONCAT(prisoners.lastname, ', '), substring(prisoners.firstname, 1, 1)) AS name,movements.time AS date,movements.direction,movements.type,movements.origin,movements.origin_code,movements.destination,movements.destination_code,movements.reason\nFROM movement_movement as movements\nJOIN domain.prisoner_prisoner as prisoners\nON movements.prisoner = prisoners.id Where type='CRT'",
      "schema": {
        "field": [
          {
            "name": "prisonNumber",
            "type": "string",
            "display": ""
          },
          {
            "name": "name",
            "type": "string",
            "display": ""
          },
          {
            "name": "date",
            "type": "date",
            "display": ""
          },
