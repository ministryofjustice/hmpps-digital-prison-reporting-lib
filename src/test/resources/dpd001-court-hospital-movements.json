          {
            "name": "direction",
            "type": "string",
            "display": ""
          },
          {
            "name": "reason",
            "type": "string",
            "display": ""
          },
          {
            "name": "origin_code",
            "type": "string",
            "display": ""
          },
          {
            "name": "destination_code",
            "type": "string",
            "display": ""
          }
        ]
      }
    }
  ],
  "policy": [
    {
      "id": "caseload",
      "type": "row-level",
      "action": ["(origin_code='${caseload}' AND lower(direction)='out') OR (destination_code='${caseload}' AND lower(direction)='in')"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseload}"]
            }
          ]
        }
      ]
    }
  ],
  "report": [
