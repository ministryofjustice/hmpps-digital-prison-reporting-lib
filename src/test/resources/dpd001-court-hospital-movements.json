      "name": "report003-hospital-movement",
      "description": "report003-hospital-movement",
      "classification": "list",
      "version": "v1.0",
      "render": "HTML",
      "dataset": "$ref:hospital-dataset",
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:name",
            "display": "Full Name",
            "formula": "",
